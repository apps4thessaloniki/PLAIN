            android:name="gr.siokas.plain.app.WrongMapDecision"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_wrong_map_decision"
            android:screenOrientation="landscape" />
        <activity
            android:name="gr.siokas.plain.app.Quiz"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_quiz"
            android:screenOrientation="landscape" />
        <activity
            android:name="gr.siokas.plain.app.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="gr.siokas.plain.app.Noisis"
            android:label="@string/title_activity_noisis" >
        </activity>
    </application>

</manifest>
